print ("Welcome to the calculator\n")
total_bill = (input("What was total bill?\n"))
people =(input("How many people to split the bill?\n"))
percentage = int(input("What percentage tip would you like to give? 10, 12 or 15?\n"))

total_bill = float(total_bill)
people =  int(people)
bill_per_person = (total_bill)/(people)
tip = (bill_per_person) * ((percentage)/100)
total_cost = (bill_per_person + tip)

#format_total_cost = round(float(total_cost), 2)
format_total_cost = "{:.2f}".format(total_cost)

print (f'Each person should pay: $ {format_total_cost}')
#print("Each person should pay: " + "$" + str(format_total_cost))
